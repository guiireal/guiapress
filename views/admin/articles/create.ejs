<%- include('../../_partials/header.ejs') %>
<%- include('../../_partials/navbar.ejs') %>

<div class="container">
    <div class="card mt-5">
        <div class="card-header">
            <h2>Novo artigo</h2>
        </div>
        <div class="card-body">
            <form action="/admin/articles" method="POST">
                <div class="form-group">
                    <label for="title">Título</label>
                    <input type="text" required="true" id="title" autocomplete="off" class="form-control" name="title"
                        placeholder="Defina o título do artigo">
                </div>
                <div class="form-group">
                    <label for="category">Categoria</label>
                    <select name="category" id="category" class="form-control">
                        <% categories.forEach(category => { %>
                        <option value="<%= category.id %>"><%= category.title %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="body">Corpo</label>
                    <textarea id="body" name="body" class="form-control"
                        placeholder="Escreva o artigo aqui!"></textarea>
                </div>
                <button class="btn btn-success" type="submit">Cadastrar</button>
            </form>
        </div>
    </div>
</div>
<%- include('../../_partials/scripts.ejs') %>

<script src="/js/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
    tinymce.init({
        selector: 'textarea',
        language: 'pt_BR',
        height: "480",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    });
</script>

