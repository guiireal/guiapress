<%- include('../../_partials/header.ejs') %>
<%- include('../../_partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a class="btn btn-success" href="/admin/categories/create">Criar nova categoria</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
            <tr>
                <td><%= category.id %></td>
                <td><%= category.title %></td>
                <td><%= category.slug %></td>
                <td>
                    <a href="/admin/categories/<%= category.id %>/edit" class="btn btn-warning">Editar</a>
                    <form method="POST" class="d-inline" action="/admin/categories/<%= category.id %>/destroy"
                        onsubmit="confirmDestroy(event, this)">
                        <button class="btn btn-danger">
                            Excluir
                        </button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<script type="text/javascript">
    function confirmDestroy(event, form) {
        event.preventDefault();
        if (confirm("Você quer deletar esta categoria?")) {
            form.submit();
        }
    }
</script>
<%- include('../../_partials/scripts.ejs') %>
<%- include('../../_partials/footer.ejs') %>